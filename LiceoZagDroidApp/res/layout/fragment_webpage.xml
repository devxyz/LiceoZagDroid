<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewTitolo" android:padding="3dp" android:layout_toStartOf="@+id/imageViewOpen"
            android:gravity="center_horizontal" android:layout_above="@+id/progressBarLoad"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewOpen" android:layout_gravity="right" android:src="@drawable/button_chrome_48x48"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:background="@drawable/background_pulsante_celeste_bianco"
            android:layout_marginRight="5dp" android:layout_marginTop="2dp" android:paddingLeft="5dp"
            android:paddingTop="1dp" android:paddingRight="5dp" android:paddingBottom="1dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLoad" android:max="100" android:indeterminate="false"
            android:layout_below="@+id/imageViewOpen" android:layout_alignParentStart="true"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webViewHtml" android:layout_below="@+id/progressBarLoad" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:layout_marginBottom="5dp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewTitolo" android:padding="3dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewOpen" android:layout_gravity="right" android:src="@drawable/right_arrow2_30x30"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLoad" android:max="100" android:indeterminate="false"
            android:layout_below="@+id/imageViewOpen" android:layout_alignParentStart="true"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webViewHtml" android:layout_below="@+id/progressBarLoad"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webViewHtml"
            android:layout_alignParentStart="true" android:layout_below="@+id/layoutTop"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentStart="false" android:id="@+id/layoutTop"
            android:background="@drawable/background_titolo_fragment" android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textViewTitolo" android:padding="3dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_toStartOf="@+id/imageViewOpen" android:layout_toRightOf="@+id/imageViewBack"
                android:layout_alignBottom="@+id/imageViewOpen" android:layout_alignTop="@+id/imageViewOpen"
                android:textStyle="bold" android:textColor="@color/color_black"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewOpen" android:layout_gravity="right"
                android:drawableRight="@drawable/button_chrome_48x48"
                android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                android:background="@color/color_transparent"
                android:layout_marginRight="5dp" android:layout_marginTop="2dp" android:paddingLeft="5dp"
                android:paddingTop="1dp" android:paddingRight="5dp" android:paddingBottom="1dp"
                android:text="Apri con " android:textSize="14dp" android:textColor="@color/color_black"
                android:textStyle="bold|italic"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back "
                android:id="@+id/imageViewBack"
                android:layout_alignParentStart="true" android:drawableLeft="@drawable/back_button2red_48x48"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" android:textSize="14dp"
                android:src="@drawable/back_button_48x48" android:background="@color/color_transparent"
                android:layout_toRightOf="@+id/progressBar3"/>
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar3"
                android:layout_alignParentStart="true"/>

    </RelativeLayout>
</RelativeLayout>
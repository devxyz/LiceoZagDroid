<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_blue_scurissimo"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <ImageView android:layout_width="75dp"
                   android:layout_height="75dp"
                   android:src="@drawable/logo_100x100"
                   android:id="@+id/imageView"
                   android:layout_alignParentStart="true" android:padding="10dp"
                   android:background="@color/color_blue_scurissimo"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nome_scuola"
                android:id="@+id/textViewTitolo"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="false"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold" android:textSize="22dp"
                android:textIsSelectable="false" android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/imageView" android:layout_toEndOf="@+id/imageView"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true" android:background="@color/color_blue_scurissimo"
                android:textColor="@color/color_white"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="tipoUtente"
                android:id="@+id/textViewTipoUtente"
                android:paddingLeft="10dp" android:gravity="right"
                android:paddingRight="10dp" android:textStyle="bold"
                android:layout_alignParentEnd="true" android:layout_alignTop="@+id/textView15"
                android:layout_above="@+id/listView4" android:padding="5dp" android:background="@color/color_blue_scurissimo"
                android:textColor="@color/color_yellow"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liceo Scientifico - IPIA"
                android:id="@+id/textView15"
                android:textStyle="bold" android:textSize="16dp"
                android:gravity="center_horizontal"
                android:layout_alignParentStart="true" android:layout_below="@+id/imageView"
                android:layout_toStartOf="@+id/textViewTipoUtente"
                android:padding="5dp" android:background="@color/color_blue_scurissimo" android:textColor="@color/color_white"/>
    </RelativeLayout>
    <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- Framelayout to display Fragments-->
        <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/color_white"/>

        <!-- Listview to display slider menu -->
        <ListView
                android:id="@+id/list_slidermenu"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:choiceMode="singleChoice"
                android:divider="@color/color_white"
                android:dividerHeight="1dp"
                android:listSelector="@drawable/list_selector_menu_liv1"
                android:background="@color/color_light_gray"/>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
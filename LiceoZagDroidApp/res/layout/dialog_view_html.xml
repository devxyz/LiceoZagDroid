<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/color_dialog_background">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:id="@+id/textViewTitle"
            android:textStyle="bold" android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/buttonClose"
            android:layout_toStartOf="@+id/buttonClose" android:layout_alignBottom="@+id/buttonClose"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/color_dialog_title_background"/>
        <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Descrizione"
                android:id="@+id/textViewDescrizione"
                android:layout_below="@+id/textViewTitle"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_above="@+id/linearLayout2"
                android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClose"
            android:src="@drawable/right_arrow2_30x30"
            android:background="@color/color_dialog_title_background"

            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2" android:gravity="center_vertical|center_horizontal"
                >
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OK"
                        android:id="@+id/buttonOK" android:textStyle="bold"
                        android:width="100dp"/>
        </LinearLayout>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar7"
                android:layout_above="@+id/textViewDescrizione" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/buttonClose"
                android:layout_toStartOf="@+id/buttonClose" android:background="@color/color_dialog_title_background"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/color_dialog_background">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:id="@+id/textViewTitle"
            android:textStyle="bold"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/buttonClose"
            android:layout_toStartOf="@+id/buttonClose"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"/>
        <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Descrizione"
                android:id="@+id/textViewDescrizione"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_above="@+id/linearLayout2"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_below="@+id/textViewTitle"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClose"
            android:src="@drawable/right_arrow2_30x30"

            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:background="@drawable/background_pulsante_red"
            android:layout_margin="5dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2" android:gravity="center_vertical|center_horizontal"
                >
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chiudi"
                        android:id="@+id/buttonOK" android:textStyle="bold"
                        android:width="100dp" android:background="@drawable/background_pulsante_red"
                        android:layout_margin="5dp"/>
        </LinearLayout>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar7"
                android:layout_below="@+id/textViewTitle"
                android:layout_alignStart="@+id/textViewDescrizione"/>
</RelativeLayout>
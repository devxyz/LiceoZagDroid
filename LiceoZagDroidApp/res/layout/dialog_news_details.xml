<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/color_dialog_background">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:text="gg/mm/aaaa"
            android:id="@+id/textDate"
            android:textColor="@color/color_blue_scurissimo"
            android:paddingLeft="10dp" android:paddingRight="10dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:gravity="right" android:textStyle="bold"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>

    <WebView
            android:layout_width="match_parent"
            android:textColor="@color/color_white"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Descrizione"
            android:id="@+id/textViewDescrizione"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="5dp" android:layout_below="@+id/textDate" android:layout_above="@+id/linearLayout4"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClose"
            android:src="@drawable/close_40x40_red"

            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:background="@color/color_dialog_title_background" android:padding="5dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Notizie"
              android:id="@+id/textView" android:paddingLeft="5dp" android:paddingRight="5dp"
              android:gravity="center_vertical|center_horizontal"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/buttonClose"
              android:layout_toStartOf="@+id/buttonClose" android:layout_alignBottom="@+id/buttonClose"
              android:textStyle="bold"
              android:background="@color/color_dialog_title_background"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/linearLayout4" android:gravity="center_vertical|center_horizontal"
                  android:padding="5dp"
                  android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Voce"
                  android:id="@+id/textView7"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/imageVoice" android:background="@color/color_transparent"
                     android:src="@drawable/text_to_speech_1" android:paddingRight="30dp" android:paddingLeft="5dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="WWW"
                  android:id="@+id/textView8"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/imageButtonWWW" android:background="@color/color_transparent"
                     android:src="@drawable/icon_web_60x60" android:paddingLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>
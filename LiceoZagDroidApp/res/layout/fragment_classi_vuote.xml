<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" android:id="@+id/xLayout7"
            android:background="@drawable/background_toolbar_fragment"
            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:id="@+id/buttonPrev"
                android:background="@drawable/background_pulsante_bianco"
                android:layout_alignParentTop="false"
                style="?android:attr/buttonStyleSmall" android:layout_marginLeft="5dp" android:textStyle="bold"
                android:textSize="40dp" android:layout_marginRight="5dp" android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false" android:layout_alignParentLeft="false"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:id="@+id/buttonNext"
                android:background="@drawable/background_pulsante_bianco" android:textSize="40dp"
                android:textStyle="bold" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" android:layout_alignParentTop="true"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giorno"
                android:id="@+id/button_giorno"
                android:drawableLeft="@drawable/button_calendario_48x48"
                android:layout_alignParentEnd="false"
                android:background="@drawable/background_pulsante_bianco" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingBottom="5dp" android:paddingTop="5dp"
                android:layout_toLeftOf="@id/buttonNext" android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false" android:layout_alignParentStart="false"
                android:layout_alignParentTop="false" android:layout_toRightOf="@id/buttonPrev"/>


    </RelativeLayout>


    <ExpandableListView
            android:id="@+id/listView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:divider="#aaaaaa"
            android:dividerHeight="1dp"
            android:childDivider="@color/color_black"

            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
            android:layout_below="@id/xLayout7">


    </ExpandableListView>
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp" >

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="titolo"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/date"
            android:textIsSelectable="false" android:textStyle="bold"
            android:layout_toLeftOf="@+id/date" android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_red_scuro"/>

    <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/id_tab_news"
            android:layout_below="@+id/date" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="12/06/2014"
            android:textSize="10dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:id="@+id/descrizione" android:layout_below="@+id/title"
            android:layout_toLeftOf="@+id/image_qrcode" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:gravity="fill_horizontal"
            android:textColor="@color/color_blue_scurissimo"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giorno"
            android:id="@+id/textViewGiorni"
            android:gravity="center_vertical|right"
            android:enabled="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/listView"
            android:layout_toStartOf="@+id/imageViewGiorno" android:layout_toRightOf="@+id/textViewFiltro"/>


    <ListView
            android:id="@+id/listView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewFiltro" android:layout_margin="5dp">

    </ListView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Classe 1A"
            android:id="@+id/textViewFiltro" android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:textStyle="bold"
            android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp"
            android:paddingBottom="5dp" android:layout_toEndOf="@+id/imageViewFiltro"
            android:layout_alignBottom="@+id/imageViewFiltro"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewGiorno"
            android:src="@drawable/_menu_home"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewFiltro" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:src="@drawable/_menu_student_48x48"/>


</RelativeLayout>

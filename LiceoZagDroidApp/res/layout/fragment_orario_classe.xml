<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ListView
            android:id="@+id/listView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
            android:layout_below="@+id/linearLayout6">

    </ListView>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:padding="10dp" android:id="@+id/linearLayout6"
            android:background="@color/color_blue_chiaro">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Millozzi"
                android:id="@+id/button_filtro"
                android:drawableLeft="@drawable/_menu_student_48x48"
                android:drawablePadding="10dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:background="@drawable/background_pulsante_celeste_bianco" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingBottom="5dp" android:paddingTop="5dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giorno"
                android:id="@+id/button_giorno" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                android:drawableLeft="@drawable/button_calendario_48x48"
                android:drawablePadding="10dp"
                android:background="@drawable/background_pulsante_celeste_bianco" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingBottom="5dp" android:paddingTop="5dp"
        />
    </RelativeLayout>


</RelativeLayout>

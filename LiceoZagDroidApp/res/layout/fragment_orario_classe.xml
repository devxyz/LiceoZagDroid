<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ListView
            android:id="@+id/listView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:layout_below="@+id/linearLayout6" android:layout_alignParentStart="true"
            android:layout_marginTop="28dp">

    </ListView>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentTop="false"
            android:layout_alignParentStart="false" android:padding="10dp" android:id="@+id/linearLayout6"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:background="@color/color_blue_scurissimo">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_filtro"
                android:drawableLeft="@drawable/_menu_student_48x48"
                android:drawablePadding="0dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:background="@drawable/background_pulsante_celeste_bianco" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingBottom="2dp" android:paddingTop="2dp"
                android:src="@drawable/_menu_student_48x48"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:id="@+id/buttonPrev"
                android:background="@drawable/background_pulsante_celeste_bianco"
                android:layout_alignParentTop="false" android:layout_toStartOf="@+id/button_giorno"
                style="?android:attr/buttonStyleSmall" android:layout_marginLeft="20dp" android:textStyle="bold"
                android:textSize="40dp" android:layout_marginRight="5dp" android:layout_alignParentBottom="false"
        />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_giorno" android:layout_alignParentTop="true" android:layout_alignParentEnd="false"
                android:drawableLeft="@drawable/button_calendario_48x48"
                android:drawablePadding="0dp"
                android:background="@drawable/background_pulsante_celeste_bianco" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingBottom="2dp" android:paddingTop="2dp"
                android:layout_toLeftOf="@+id/buttonNext" android:src="@drawable/button_calendario_48x48"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:id="@+id/buttonNext"
                android:background="@drawable/background_pulsante_celeste_bianco" android:textSize="40dp"
                android:textStyle="bold" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="---------------"
            android:id="@+id/textViewNomeData"
            android:background="@color/color_light_yellow"
            android:gravity="center_horizontal" android:textStyle="bold"
            android:layout_below="@+id/linearLayout6" android:layout_alignParentStart="true"/>


</RelativeLayout>

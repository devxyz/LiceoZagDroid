<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <GridView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listView4" android:layout_alignParentLeft="true"
            android:horizontalSpacing="1dp"
            android:choiceMode="none" android:clickable="true"
            android:numColumns="2" android:layout_alignParentBottom="true"
            android:gravity="top"
            android:layout_below="@+id/textViewTipoUtente" android:focusable="true"
            android:layout_marginTop="0dp"
            android:paddingLeft="30dp">
    </GridView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TIPO UTENTE"
            android:id="@+id/textViewTipoUtente" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/color_black"
            android:textSize="14dp" android:textStyle="italic" android:padding="5dp"/>

</RelativeLayout>

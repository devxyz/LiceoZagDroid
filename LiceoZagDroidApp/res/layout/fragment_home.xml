<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/logo_100x100"
               android:id="@+id/imageView"
               android:layout_alignParentStart="true" android:padding="10dp"
               android:background="@color/color_light_blue"/>
    <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView4" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:horizontalSpacing="3dp"
            android:layout_below="@+id/textView15" android:choiceMode="none" android:clickable="true"
            android:numColumns="3" android:layout_alignParentBottom="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nome_scuola"
            android:id="@+id/textViewTitolo"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="false"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold" android:textSize="22dp"
            android:textIsSelectable="false" android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imageView" android:layout_toEndOf="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentTop="true" android:background="@color/color_light_blue"
            android:textColor="@color/color_white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tipoUtente"
            android:id="@+id/textViewTipoUtente"
            android:paddingLeft="10dp" android:gravity="right"
            android:paddingRight="10dp" android:textStyle="bold"
            android:layout_alignParentEnd="true" android:layout_alignTop="@+id/textView15"
            android:layout_above="@+id/listView4" android:padding="5dp" android:background="@color/color_blue"
            android:textColor="@color/color_yellow"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liceo Scientifico - IPIA"
            android:id="@+id/textView15"
            android:textStyle="bold" android:textSize="16dp"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true" android:layout_below="@+id/imageView"
            android:layout_toStartOf="@+id/textViewTipoUtente"
            android:padding="5dp" android:background="@color/color_blue" android:textColor="@color/color_white"/>


</RelativeLayout>
